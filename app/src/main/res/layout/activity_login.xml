<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.login.view.LoginActivity"
    android:layout_margin="20dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_name"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/input_name"
        android:text="z1234"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ed_pasd"
        app:layout_constraintTop_toBottomOf="@id/ed_name"
        android:hint="@string/input_pasd"
        android:text="123456"
        />
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cheb_rememberPasd"
        app:layout_constraintTop_toBottomOf="@id/ed_pasd"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="@string/remember_passWord"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_login"
        app:layout_constraintTop_toBottomOf="@id/cheb_rememberPasd"
        android:text="@string/login"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#B2B7BC"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/view_hotgoods"
        />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="170dp"
        android:id="@+id/ima_hotgoods"
        app:layout_constraintTop_toBottomOf="@id/view_hotgoods"
        app:layout_constraintLeft_toLeftOf="parent"

        />
    <TextView
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_hotgoods"
        app:layout_constraintTop_toBottomOf="@id/view_hotgoods"
        app:layout_constraintLeft_toRightOf="@id/ima_hotgoods"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="蚕丝被"
        android:padding="5dp"
        android:fontFamily="@font/kaiti"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text_hotgoods"
        app:layout_constraintTop_toBottomOf="@id/tv_name_hotgoods"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_hotgoods"
        android:textSize="18dp"
        android:text="99999999999999999"
        android:padding="5dp"
        android:fontFamily="@font/kaiti"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price_hotgoods"
        app:layout_constraintTop_toBottomOf="@id/tv_text_hotgoods"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_hotgoods"
        android:textColor="#F80101"
        android:textSize="18dp"
        android:text="8888888888888"
        android:padding="5dp"
        android:fontFamily="@font/kaiti"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
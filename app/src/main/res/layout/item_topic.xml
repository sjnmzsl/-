<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginBottom="20dp"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/ima_topic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_topic"
        app:layout_constraintTop_toBottomOf="@id/ima_topic"
        app:layout_constraintLeft_toLeftOf="@id/ima_topic"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:textSize="20dp"
        android:fontFamily="@font/kaiti"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price_topic"
        app:layout_constraintLeft_toRightOf="@id/tv_name_topic"
        app:layout_constraintTop_toTopOf="@id/tv_name_topic"
        android:padding="5dp"
        android:textSize="20dp"
        android:fontFamily="@font/kaiti"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_text_topic"
        app:layout_constraintTop_toBottomOf="@id/tv_price_topic"
        app:layout_constraintLeft_toLeftOf="@id/tv_name_topic"
        android:padding="5dp"
        android:textSize="18dp"
        android:fontFamily="@font/kaiti"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
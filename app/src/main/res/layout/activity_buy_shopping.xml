<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.BuyShopping.BuyShoppingActivity">

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:id="@+id/banner_BuyShopping"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_buyShopping"
        app:layout_constraintTop_toBottomOf="@id/banner_BuyShopping"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        android:fontFamily="@font/kaiti"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price_buyShopping"
        app:layout_constraintTop_toBottomOf="@id/tv_name_buyShopping"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:fontFamily="@font/kaiti"
        android:textColor="#F40505"
        />


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:id="@+id/ima_collect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/select_collect"
        />
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/ima_cart"
        app:layout_constraintBottom_toBottomOf="@id/ima_collect"
        app:layout_constraintLeft_toRightOf="@id/ima_collect"
        android:layout_marginLeft="20dp"
        android:background="@drawable/cart"
        />

    <TextView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/tv_count_buyShopping"
        app:layout_constraintTop_toTopOf="@id/ima_cart"
        app:layout_constraintRight_toRightOf="@id/ima_cart"
        android:text=""
        android:gravity="center"
        android:background="@drawable/circle"
        android:textSize="15dp"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:id="@+id/tv_nowBuy"
        android:gravity="center"
        android:text="立即购买"
        app:layout_constraintTop_toTopOf="@id/ima_collect"
        app:layout_constraintBottom_toBottomOf="@id/ima_collect"
        app:layout_constraintRight_toLeftOf="@id/tv_addCart"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:id="@+id/tv_addCart"
        android:text="加入购物车"
        android:background="#F40A0A"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/ima_collect"
        app:layout_constraintBottom_toBottomOf="@id/ima_collect"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
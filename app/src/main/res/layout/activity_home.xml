<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.home.activity.HomeActivity"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toob_Home"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/teal_200"
        app:title="网易严选"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/fralayout_Home"
        app:layout_constraintTop_toBottomOf="@id/toob_Home"
        app:layout_constraintBottom_toTopOf="@id/rbgroup_HomeFra"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rbgroup_HomeFra"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        >
       <RadioButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:button="@null"
           android:id="@+id/rb_HomeFra"
           android:text="首页"
           android:gravity="center"

           />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/rb_special"
            android:text="专题"
            android:gravity="center"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/rb_directroy"
            android:text="分类"
            android:gravity="center"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/rb_Cart"
            android:text="购物车"
            android:gravity="center"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:layout_weight="1"
            android:id="@+id/rb_my"
            android:text="我的"
            android:gravity="center"

            />


    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>